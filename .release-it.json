{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull", "npm run lint"],
    "after:bump": "npx auto-changelog -p --template ./keepachangelog.hbs"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}
