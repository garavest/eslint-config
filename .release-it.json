{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireBranch": "main"
  },
  "github": {
    "release": true
  },
  "hooks": {
    "before:init": ["git pull", "npm run lint", "npm run build"],
    "after:bump": [
      "pnpx auto-changelog -p --template https://raw.githubusercontent.com/cookpete/auto-changelog/master/templates/keepachangelog.hbs"
    ]
  },
  "npm": {
    "publish": true,
    "versionArgs": ["--allow-same-version"]
  },
  "publishConfig": {
    "access": "public"
  }
}
